<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- Add you code here -->
        <!-- academic.course tree view -->
        <!-- Tree view Course -->
        <record id="view_academic_course_tree" model="ir.ui.view">
            <field name="name">academic.course.view.tree</field>
            <field name="model">academic.course</field>
            <field name="arch" type="xml">
                <tree>
                    <!-- Add your fields here -->
                    <field name="name"/>
                    <field name="description"/>
                    <field name="responsible_id"/>
                </tree>
            </field>
        </record>

        <!-- Form View Course -->
        <!-- academic.course form view -->
        <record id="view_academic_course_form" model="ir.ui.view">
            <field name="name">academic.course.view.form</field>
            <field name="model">academic.course</field>
            <field name="arch" type="xml">
                <form string="Course Form">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>

                        <group>
                            <field name="responsible_id"/>
                        </group>

                        <notebook>
                            <page string="Description">
                                <field name="description"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>