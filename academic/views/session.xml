<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- Add you code here -->
        <!-- academic.session tree view -->
        <record id="view_academic_session_tree" model="ir.ui.view">
            <field name="name">academic.session.view.tree</field>
            <field name="model">academic.session</field>
            <field name="arch" type="xml">
                <tree string="Session">
                    <!-- Add your fields here -->
                    <field name="name"/>
                    <field name="course_id"/>
                    <field name="instructor_id"/>
                    <field name="start_date"/>
                    <field name="duration"/>
                    <field name="seats"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <!-- academic.session form view -->
        <record id="view_academic_session_form" model="ir.ui.view">
            <field name="name">academic.session.view.form</field>
            <field name="model">academic.session</field>
            <field name="arch" type="xml">
                <form string="Session">
                    <sheet>
                        <h1>
                            <label for="name" class="oe_edit_only" string="Session Name"/>
                            <field name="name"/>
                        </h1>
                        <group>
                            <!-- Add your fields here -->
                            <group>
                                <field name="course_id"/>
                                <field name="instructor_id"/>
                                <field name="start_date"/>
                            </group>
                            <group>
                                <field name="duration"/>
                                <field name="seats"/>
                                <field name="active"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
    </data>
</odoo>