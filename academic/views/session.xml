<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- Add you code here -->
        <!-- academic.session tree view -->
        <record id="view_academic_session_tree" model="ir.ui.view">
            <field name="name">academic.session.view.tree</field>
            <field name="model">academic.session</field>
            <field name="arch" type="xml">
                <tree string="Session">
                    <!-- Add your fields here -->
                    <field name="name"/>
                    <field name="course_id"/>
                    <field name="instructor_id"/>
                    <field name="start_date"/>
                    <field name="duration"/>
                    <field name="seats"/>
                    <field name="taken_seats" widget="progressbar"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <!-- academic.session form view -->
        <record id="view_academic_session_form" model="ir.ui.view">
            <field name="name">academic.session.view.form</field>
            <field name="model">academic.session</field>
            <field name="arch" type="xml">
                <form string="Session">
                    <sheet>
                        <h1>
                            <label for="name" class="oe_edit_only" string="Session Name"/>
                            <field name="name"/>
                        </h1>
                        <group>
                            <!-- Add your fields here -->
                            <group>
                                <field name="course_id"/>
                                <field name="instructor_id" 
                                    domain="['|',('is_instructor','=',True),('category_id','ilike','pelatih')]"/>
                                            <!-- sesuatu adalah sesuatu                     incase sensitive-->              
                                <field name="start_date"/>
                            </group>
                            <group>
                                <field name="duration"/>
                                <field name="seats"/>
                                <field name="taken_seats" widget="progressbar"/>
                                <field name="active"/>
                            </group>
                        </group>

                        <group>
                            <notebook>
                                <page string="Attendee">
                                    <field name="attendee_ids"/>
                                </page>
                            </notebook>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- academic.session calendar view -->
        <record id="view_academic_session_calendar" model="ir.ui.view">
            <field name="name">academic.session.view.calendar</field>
            <field name="model">academic.session</field>
            <field name="arch" type="xml">
                <calendar string="Session Calendar" date_start="start_date" color="course_id">
                    <!-- Add your fields here -->
                    <field name="name"/>
                </calendar>
            </field>
        </record>


        <!-- academic.session search view -->
        <record id="view_academic_session_search" model="ir.ui.view">
            <field name="name">academic.session.view.search</field>
            <field name="model">academic.session</field>
            <field name="arch" type="xml">
                <search string="Session">
                    <!-- Add your fields here -->
                    <field name="name"/>
                    <field name="instructor_id"/>

                    <filter name="duration" string="Non zero duration"
                        domain="[('duration','>',0)]"/>

                    <filter name="course" string="Course" 
                        domain="[]" 
                        context="{'group_by':'course_id'}"/>

                    <filter name="instructor" string="Instructor" 
                        domain="[]" 
                        context="{'group_by':'instructor_id'}"/>

                </search>
            </field>
        </record>

        <!-- academic.session graph view -->
        <record id="view_academic_session_graph" model="ir.ui.view">
            <field name="name">academic.session.view.graph</field>
            <field name="model">academic.session</field>
            <field name="arch" type="xml">
                <graph string="Session" type="bar">
                    <!-- Add your fields here -->
                    <field name="instructor_id"/>
                </graph>
            </field>
        </record>

    </data>
</odoo>